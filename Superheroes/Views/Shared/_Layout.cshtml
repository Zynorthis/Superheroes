<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <title>@ViewBag.Title - Superheroes Project</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand">Superheroes</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
                </li>
                @*<li class="nav-item">
                    <a> @Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" }) </a>
                </li>
                <li class="nav-item">
                    <a> @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" }) </a>
                </li>*@
                <li class="nav-item">
                    @Html.ActionLink("List of Heros", "Index", "Superhero", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Details Page Test", "Details", "Superhero", new { id = 1 }, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Create", "Create", "Superhero", null, new { @class = "nav-link" })
                </li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>

        <div class="container body-content">
            @RenderBody()
            <hr />
            <center>
                <footer>
                    <p> 
                        Made with tons of <i class="fas fa-heart"></i> and <i class="fas fa-coffee"></i>
                    </p>
                    <p>&copy; 2019 - Jacob Taylor Software Engineer
                        <i class="fas fa-code"></i>
                    </p>
                </footer>
            </center>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
